<%= simple_form_for([@room.hotel, @room]) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :capacity %>
      <%= f.input :price %>
      <%= f.input :hotel_id, as: :hidden %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
