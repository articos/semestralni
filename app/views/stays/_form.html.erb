<%= simple_form_for(@stay) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date_from %>
    <%= f.input :date_to %>
    <%= f.input :credit_card %>
    <%= f.input :card_validation %>
    <%= f.input :arrive %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
