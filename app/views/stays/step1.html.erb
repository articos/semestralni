<%= simple_form_for(:stay,url:step2_stays_path) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :location, collection: Location.all %>
      <%= f.input :capacity %>
      <%= f.input :date_from, as: :date %>
      <%= f.input :date_to, as: :date%>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>