<%= simple_form_for(@employee) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :surname %>
    <%= f.input :id_number %>
    <%= f.input :wage %>
    <%= f.select(:role, { "manazer" => "manazer", "kuchar/cisnik" => "kuchar/cisnik", "recepcni" =>"recepcni",
                          "udrzbar" => "udrzbar", "pokojova sluzba" => "pokojova sluzba",
                          "ostraha" => "ostraha"}) %>
    <%= f.association :hotel, label_method: :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
